!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "foundation-rails"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Serif:400,700", :rel => "stylesheet", :type => "text/css"}/
  %body
    #navigation
      %div#navigation{"data-magellan-expedition" => "fixed"}
        %ul.sub-nav
          %li{"data-magellan-arrival" => "build"}
            %a{:href => "#home"} Home
          %li{"data-magellan-arrival" => "js"}
            %a{:href => "#aboutMe"} About me
          %li{"data-magellan-arrival" => "build"}
            %a{:href => "#projects"} Projects
          %li{"data-magellan-arrival" => "js"}
            %a{:href => "#contact"} Contact
          %li
            %a{href: "https://www.dropbox.com/s/pq5p70qf5wt84sj/George%20James%20Somerville.docx"} Download CV
    #tablet-navigation        
      .small-12.columns  
        .hamburger-container 
          %h3 menu
          %a.hamburger 
          %nav 
            %ul
              %li
                %a{:href => "#home"} Home
              %li  
                %a{:href => "#aboutMe"} About me
              %li  
                %a{:href => "#projects"} Projects
              %li  
                %a{:href => "#contact"} Contact
              %li  
                %a{href: "https://www.dropbox.com/s/pq5p70qf5wt84sj/George%20James%20Somerville.docx"} Download CV

                     
      
    .content-container    
      = yield

      = javascript_include_tag "application"
  :javascript
    $('.hamburger').click( function() {
      $('nav').slideToggle();
    });    